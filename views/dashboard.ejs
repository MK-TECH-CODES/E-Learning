<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email - Verify</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../css/style2.css" />
  </head>
  <body>
    <div class="container">
      <h1>Welcome to admin dashboard</h1>
      <br />
      <div class="d-flex align-items-start">
        <div
          class="nav flex-column nav-pills me-3"
          id="v-pills-tab"
          role="tablist"
          aria-orientation="vertical"
          style="background-color: rgb(144, 244, 255)"
        >
          <button
            class="nav-link active"
            id="v-pills-home-tab"
            data-bs-toggle="pill"
            data-bs-target="#v-pills-home"
            type="button"
            role="tab"
            aria-controls="v-pills-home"
            aria-selected="true"
          >
            Home
          </button>
          <button
            class="nav-link"
            id="v-pills-profile-tab"
            data-bs-toggle="pill"
            data-bs-target="#v-pills-profile"
            type="button"
            role="tab"
            aria-controls="v-pills-profile"
            aria-selected="false"
          >
            USER DATA
          </button>
          <button
            class="nav-link"
            id="v-pills-messages-tab"
            data-bs-toggle="pill"
            data-bs-target="#v-pills-messages"
            type="button"
            role="tab"
            aria-controls="v-pills-messages"
            aria-selected="false"
          >
            COURSE DETAILS
          </button>
          <button
            class="nav-link"
            id="v-pills-settings-tab"
            data-bs-toggle="pill"
            data-bs-target="#v-pills-settings"
            type="button"
            role="tab"
            aria-controls="v-pills-settings"
            aria-selected="false"
          >
            NEW COURSE
          </button>
          <button
            class="nav-link"
            id="v-pills-settings-tab"
            data-bs-toggle="pill"
            data-bs-target="#v-pills-upload"
            type="button"
            role="tab"
            aria-controls="v-pills-settings"
            aria-selected="false"
          >
            COURSE UPLOAD
          </button>
        </div>
        <div class="tab-content" id="v-pills-tabContent">
          <div
            class="tab-pane fade show active"
            id="v-pills-home"
            role="tabpanel"
            aria-labelledby="v-pills-home-tab"
          >
            <div class="row">
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h3 class="card-title">
                      <span class="badge bg-success">TOTAL USERS</span>
                    </h3>
                    <h1 class="card-text">
                      <span class="badge bg-secondary">
                        <%=course.length %></span
                      >
                    </h1>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h3 class="card-title">
                      <span class="badge bg-success">TOTAL COURSE</span>
                    </h3>
                    <h1 class="card-text">
                      <span class="badge bg-secondary">
                        <%=course.length %></span
                      >
                    </h1>
                    <!-- <a href="#" class="btn btn-primary">Button</a> -->
                  </div>
                </div>
              </div>
              <br />
              <% for (let i = 0; i < course.length; i++) { %>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h3 class="card-title">
                      <span
                        class="badge"
                        style="background-color: rgb(225, 27, 103)"
                        ><%=course[i]%></span
                      >
                    </h3>
                    <h1 class="card-text">
                      <span class="badge bg-secondary">
                        <%=courseList[course[i]].length %></span
                      >
                    </h1>
                    <!-- <a href="#" class="btn btn-primary">Button</a> -->
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>

          <div
            class="tab-pane fade"
            id="v-pills-profile"
            role="tabpanel"
            aria-labelledby="v-pills-profile-tab"
          >
            <div class="row">
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h1 class="card-title">TOTAL STUDENTS</h1>
                    <p class="card-text">
                      With supporting text below as a natural lead-in to
                      additional content.
                    </p>
                    <a href="#" class="btn btn-primary">Button</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h1 class="card-title">WEB DEVELOPMENT STUDENTS</h1>
                    <p class="card-text">
                      With supporting text below as a natural lead-in to
                      additional content.
                    </p>
                    <a href="#" class="btn btn-primary">Button</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h1 class="card-title">JAVA DEVELOPMENT STUDENTS</h1>
                    <p class="card-text">
                      With supporting text below as a natural lead-in to
                      additional content.
                    </p>
                    <a href="#" class="btn btn-primary">Button</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h1 class="card-title">PYTHON DEVELOPMENT STUDENTS</h1>
                    <p class="card-text">
                      With supporting text below as a natural lead-in to
                      additional content.
                    </p>
                    <a href="#" class="btn btn-primary">Button</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h1 class="card-title">C DEVELOPMENT STUDENTS</h1>
                    <p class="card-text">
                      With supporting text below as a natural lead-in to
                      additional content.
                    </p>
                    <a href="#" class="btn btn-primary">Button</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h1 class="card-title">C++ DEVELOPMENT STUDENTS</h1>
                    <p class="card-text">
                      With supporting text below as a natural lead-in to
                      additional content.
                    </p>
                    <a href="#" class="btn btn-primary">Button</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h1 class="card-title">JAVASCRIPT DEVELOPMENT STUDENTS</h1>
                    <p class="card-text">
                      With supporting text below as a natural lead-in to
                      additional content.
                    </p>
                    <a href="#" class="btn btn-primary">Button</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h1 class="card-title">PHP DEVELOPMENT STUDENTS</h1>
                    <p class="card-text">
                      With supporting text below as a natural lead-in to
                      additional content.
                    </p>
                    <a href="#" class="btn btn-primary">Button</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div
            class="tab-pane fade"
            id="v-pills-messages"
            role="tabpanel"
            aria-labelledby="v-pills-messages-tab"
          >
            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="Search"
                aria-label="Search"
                aria-describedby="button-addon2"
              />
              <button type="button" class="btn btn-primary">SERACH</button>
            </div>
            <div class="card w-75">
              <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">
                  With supporting text below as a natural lead-in to additional
                  content.
                </p>
                <a href="#" class="btn btn-primary">Button</a>
              </div>
            </div>
          </div>
          <!-- for upload  -->
          <div
            class="tab-pane fade c1"
            id="v-pills-settings"
            role="tabpanel"
            aria-labelledby="v-pills-settings-tab"
          >
            <h1>UPLOAD NEW COURSE</h1>
            <form action="/upload" method="post" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="title" class="form-label">Course Title:</label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                />
              </div>
              <div class="mb-3">
                <label for="author" class="form-label">Author:</label>
                <input
                  type="text"
                  class="form-control"
                  id="author"
                  name="author"
                />
              </div>
              <div class="mb-3">
                <label for="author" class="form-label">Description :</label>
                <input
                  type="text"
                  class="form-control"
                  id="description"
                  name="description"
                />
              </div>
              <div class="mb-3">
                <label for="course" class="form-label">Select Course:</label>
                <select class="form-control" id="course" name="course">
                  <option value="Web Development">Web Development</option>
                  <option value="PYTHON DEVELOPMENT">PYTHON DEVELOPMENT</option>
                  <option value="JAVA DEVELOPMENT">JAVA DEVELOPMENT</option>
                  <option value="C DEVELOPMENT">C DEVELOPMENT</option>
                  <option value="PHP DEVELOPMENT">PHP DEVELOPMENT</option>
                  <option value="C++ DEVELOPMENT">C++ DEVELOPMENT</option>
                  <option value="APP DEVELOPMENT">APP DEVELOPMENT</option>
                  <option value="JAVA SCRIPT DEVELOPMENT">
                    JAVA SCRIPT DEVELOPMENT
                  </option>
                  <option value="NODE DEVELOPMENT">NODE DEVELOPMENT</option>
                  <option value="REACT DEVELOPMENT">REACT DEVELOPMENT</option>

                  <!-- Add more options for different courses if needed -->
                </select>
              </div>
              <div class="mb-3">
                <label for="video" class="form-label">Video Source:</label>
                <input
                  type="file"
                  class="form-control custom-file-input"
                  id="video"
                  name="video"
                  accept="image/*"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary">Upload</button>
            </form>
          </div>
          <div
            class="tab-pane fade c1"
            id="v-pills-upload"
            role="tabpanel"
            aria-labelledby="v-pills-settings-tab"
          >
            <h1>NEW COURSE CREATIONS</h1>
            <form
              action="/videoupload"
              method="post"
              enctype="multipart/form-data"
              id="courseCreationForm"
            >
              <div class="mb-3">
                <label for="course" class="form-label">Select Course:</label>

                <select class="form-control" id="course" name="course">
                  <% for (let i = 0; i < course.length; i++) { %> <% for (let j=
                  0; j < courseList[course[i]].length; j++) { %>
                  <option
                    value="<%=totalElements[courseList[course[i]][j]].course_id %>-<%=
                    totalElements[courseList[course[i]][j]].course_title%>"
                  >
                    <%=totalElements[courseList[course[i]][j]].course_id %>-<%=
                    totalElements[courseList[course[i]][j]].course_title%>
                  </option>
                  <%}%> <% }%>
                </select>
              </div>
              <div class="file-inputs">
                <div class="mb-3">
                  <label for="video" class="form-label">SECTION 1</label>
                  <input
                    type="file"
                    class="form-control custom-file-input"
                    id="video"
                    name="video"
                    accept="video/*"
                    multiple
                    required
                  />
                  <label for="description1" class="form-label"
                    >Description for Section 1:</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="description1"
                    name="descriptions"
                    placeholder="Description for Section 1"
                  />
                </div>
              </div>
              <button
                type="button"
                class="btn btn-secondary"
                onclick="addFileInput()"
              >
                Add Another Video
              </button>
              <button type="submit" class="btn btn-primary">Upload</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script>
      function addFileInput() {
        const form = document.getElementById("courseCreationForm");
        const fileInputsContainer = form.querySelector(".file-inputs");
        const index = fileInputsContainer.children.length + 1;
        const div = document.createElement("div");
        div.classList.add("mb-3");
        const label = document.createElement("label");
        label.setAttribute("for", `video${index}`);
        label.classList.add("form-label");
        label.textContent = `SECTION ${index}:`;
        const input = document.createElement("input");
        input.setAttribute("type", "file");
        input.classList.add("form-control", "custom-file-input");
        input.setAttribute("id", `video`);
        input.setAttribute("name", `video`);
        input.setAttribute("accept", "video/*");
        input.setAttribute("multiple", "");
        input.setAttribute("required", "");
        const descriptionLabel = document.createElement("label");
        descriptionLabel.setAttribute("for", `description${index}`);
        descriptionLabel.classList.add("form-label");
        descriptionLabel.textContent = `Description for Section ${index}:`;
        const descriptionInput = document.createElement("input");
        descriptionInput.setAttribute("type", "text");
        descriptionInput.classList.add("form-control");
        descriptionInput.setAttribute("id", `description${index}`);
        descriptionInput.setAttribute("name", `descriptions`);
        descriptionInput.setAttribute(
          "placeholder",
          `Description for Section ${index}`
        );
        div.appendChild(label);
        div.appendChild(input);
        div.appendChild(descriptionLabel);
        div.appendChild(descriptionInput);
        fileInputsContainer.appendChild(div);
      }
    </script>
